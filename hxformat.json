{
	"lineEnds": {
		"leftCurly": "after",
		"rightCurly": "both",
		"objectLiteralCurly": {
			"leftCurly": "after"
		}
	},
	"sameLine": {
		"ifElse": "next",
		"doWhile": "next",
		"tryBody": "next",
		"tryCatch": "next",
		"functionBody": "next",
		"anonFunctionBody": "next"
	},
	
	"whitespace": {
		"arrowFunctionsPolicy": "around",
		"functionTypeHaxe3Policy": "none",
		"functionTypeHaxe4Policy": "none",
		"typeParamOpenPolicy": "none",
		"typeParamClosePolicy": "none",
		"colonPolicy": "none",
		"caseColonPolicy": "none",
		"objectFieldColonPolicy": "around",
		"typeHintColonPolicy": "around",
		"typeCheckColonPolicy": "none",
		"ternaryPolicy": "around",

		"parenConfig": {
		  "catchParens": {
			"openingPolicy": "none",
			"closingPolicy": "none"
		  },
		  "ifConditionParens": {
			"openingPolicy": "none",
			"closingPolicy": "none"
		  },
		  "sharpConditionParens": {
			"openingPolicy": "onlyAfter",
			"closingPolicy": "before"
		  },
		  "switchConditionParens": {
			"openingPolicy": "none",
			"closingPolicy": "none"
		  },
		  "whileConditionParens": {
			"openingPolicy": "none",
			"closingPolicy": "none"
		  },
		  "funcParamParens": {
			"openingPolicy": "none",
			"closingPolicy": "none",
			"removeInnerWhenEmpty": true
		  },
		  "anonFuncParamParens": {
			"openingPolicy": "none",
			"closingPolicy": "onlyAfter",
			"removeInnerWhenEmpty": true
		  }
		}
	},

	"wrapping": {
		"arrayMatrixWrap": "matrixWrapWithAlign",
		"arrayWrap": {
		  "defaultWrap": "fillLine",
		  "defaultLocation": "afterLast"
		},
		"maxLineLength": 100,
		"casePattern": {
			"defaultWrap": "onePerLineAfterFirst",
			"defaultLocation": "beforeLast"
		},
		"opAddSubChain": {
			"defaultWrap": "fillLine",
			"defaultLocation": "beforeLast",
			"rules": []
		},
		"methodChain": {
			"defaultWrap": "onePerLine",
			"defaultLocation": "afterLast",
			"rules": []
		}
	}
}
